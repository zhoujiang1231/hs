<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.dao.CourseDao">
    <resultMap id="CourseList" type="Course">
    </resultMap>
    <select id="getAllCourse" resultMap="Course" parameterType="java.lang.String">
        SELECT * FROM course where cteacher = (SELECT name FROM user WHERE user_id = #{user_id})
    </select>
    <update id="updateUserPsw" parameterType="User">
        UPDATE user SET user_password=#{user_password} WHERE user_id = #{user_id}
    </update>
    <update id="updateUser" parameterType="User">
        UPDATE user SET email = #{email},tel=#{tel} WHERE user_id = #{user_id}
    </update>
    <insert id="addUser" parameterType="User" useGeneratedKeys="true">
        INSERT INTO user  (user_name,user_password,user_type,email,name,sex,tel,idcard,creat_time)
        VALUES (#{user_name},#{user_password},#{user_type},#{email},#{name},#{sex},#{tel},#{idcard},now())
    </insert>
    <delete id="deleteUser" parameterType="User">
        DELETE user where user_id=#{user_id}
    </delete>
    <insert id="addStudent" parameterType="User" useGeneratedKeys="true">
        INSERT INTO user  (user_name,user_password,user_type,email,name,sex,sno,tel,idcard,creat_time)
        VALUES (#{sno},"888888",#{user_type},#{email},#{name},#{sex},#{sno},#{tel},#{idcard},now())
    </insert>
    <select id="checkUserNameUnique" parameterType="java.lang.String" resultType="User">
        SELECT * FROM user WHERE user_name=#{user_name}
    </select>
    <select id="checkSno" parameterType="java.lang.String" resultType="User">
        SELECT * FROM user WHERE sno=#{sno}
    </select>
</mapper>